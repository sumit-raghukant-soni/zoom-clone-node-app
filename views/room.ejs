<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zoom Clone</title>
    <link rel="stylesheet" href="style.css">
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.5.3/dist/peerjs.min.js"></script>
    <!-- <script src="https://kit.fontawesome.com/c939d0e917.js"></script> -->
    <script src="https://kit.fontawesome.com/c72d630738.js" crossorigin="anonymous"></script>
    <script> 
    // console.log(" <%= roomId %> "); 
    const ROOM_ID = "<%= roomId %>";
    </script>
</head>
<body>
    
    <div class="main">
        <div class="main__left">
            <div class="main__videos">
                <div id="video-grid"></div>
            </div>
            <div class="main__controls">
                <div class="main__controls__block">
                    <div class="controls__button main__mute__button" onclick="muteUnmute()">
                        <i class="fa-solid fa-microphone"></i>
                        <span>Mute</span>
                    </div>
                    <div class="controls__button main__video__button" onclick="playStop()">
                        <i class="fa-solid fa-video"></i>
                        <span>Stop Video</span>
                    </div>
                </div>
                <div class="main__controls__block">
                    <div class="controls__button">
                        <i class="fas fa-shield-alt"></i>
                        <span>Security</span>
                    </div>
                    <div class="controls__button">
                        <i class="fas fa-user-friends"></i>
                        <span>Participants</span>
                    </div>
                    <div class="controls__button">
                        <i class="fas fa-comment-alt"></i>
                        <span>Chats</span>
                    </div>
                </div>
                <div class="main__controls_block">
                    <div class="controls__button leave__meeting">
                            <i class="fa-solid fa-right-from-bracket"></i>
                            <span>Leave</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="main__right">
            <div class="main__header">
                <h4>Chat</h4>
            </div>
            <div class="main__chat__window">
                <ul class="messages">

                </ul>
            </div>
            <div class="main__message__container">
                <input type="text" id="chat_message" placeholder="Type message here...">
            </div>
        </div>
    </div>

    <script src="script.js"></script>
</body>
</html>